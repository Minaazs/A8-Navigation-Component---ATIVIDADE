<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id_graph"
    app:startDestination="@id/homeFragment">

    <!-- Home Fragment -->
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.livrostore.HomeFragment"
        android:label="Home"
        tools:layout="@layout/fragment_home">
        
        <!-- Ação para ir para detalhes -->
        <action
            android:id="@+id/action_home_to_detalhes"
            app:destination="@id/detalhesFragment" />
    </fragment>

    <!-- Favoritos Fragment -->
    <fragment
        android:id="@+id/favoritosFragment"
        android:name="com.example.livrostore.FavoritosFragment"
        android:label="Favoritos"
        tools:layout="@layout/fragment_favoritos" />

    <!-- Perfil Fragment -->
    <fragment
        android:id="@+id/perfilFragment"
        android:name="com.example.livrostore.PerfilFragment"
        android:label="Perfil"
        tools:layout="@layout/fragment_perfil" />

    <!-- Detalhes Fragment -->
    <fragment
        android:id="@+id/detalhesFragment"
        android:name="com.example.livrostore.DetalhesFragment"
        android:label="Detalhes"
        tools:layout="@layout/fragment_detalhes">
        
        <!-- Argumentos que o fragmento de detalhes recebe -->
        <argument
            android:name="titulo"
            app:argType="string" />
        <argument
            android:name="autor"
            app:argType="string" />
        <argument
            android:name="ano"
            app:argType="integer" />
        <argument
            android:name="descricao"
            app:argType="string" />
    </fragment>

</navigation>
